div(style="width:460px; height:700px; float:left; margin-right:50px;")
	h1 #{user.username}

	div(style="width:200px; background-color:rgba(114,114,114,0.3)")  #{user.first_name} #{user.last_name} User id: #{user.id}
	h3 My Posts
	div(style="width:450px; height:600px; overflow:scroll; background-color:rgba(214,214,214,0.5)")
		each post in user.posts
			p(style="border-bottom: 1px solid #BFC7CA;") 
				p(style="color:#999999") #{post.updated_at}
				p#{post.message}

div(style="width:460px; height:700px; float:left;")
